        advanceSearch.Uso_del_EjercicioSearchType = 0;
        if ($('#ddlAdvanceUso_del_Ejercicio').val().length > 0 || $("#txtAdvanceUso_del_Ejercicio").val() == "") {


            if (isMS_Uso_del_EjercicioTextSearch) {
                advanceSearch.Uso_del_EjercicioName = $("#txtAdvanceUso_del_Ejercicio").val();
                advanceSearch.Uso_del_EjercicioNameSearchType = $("#ddlAdvanceUso_del_Ejercicio").val();
