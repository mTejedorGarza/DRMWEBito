                <div class="MarginBottom form-inline">
                    <input type="submit" class="btn btn-primary" value="@Resources.Resources.Search"><a class="btn btn-primary" href="@Url.Content("~/Frontal/MS_Uso_del_Ejercicio/")" value=" ">@Resources.Resources.Cancelar</a>
