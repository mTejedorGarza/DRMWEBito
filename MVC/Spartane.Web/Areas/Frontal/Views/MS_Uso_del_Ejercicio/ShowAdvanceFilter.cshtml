        if ($("#txtAdvanceFromFolio").val() != "" || $("#txtAdvanceToFolio").val() != "") {
            hasParameter = true;
            advanceSearch.MS_Uso_del_EjercicioFolioFrom = $("#txtAdvanceFromFolio").val();
            advanceSearch.MS_Uso_del_EjercicioFolioTo = $("#txtAdvanceToFolio").val();
