            }
            else {

                advanceSearch.Uso_del_EjercicioToSearch = $("#ddlAdvanceUso_del_Ejercicio").val();
                advanceSearch.Uso_del_EjercicioSearchType = 2;
            }
        }

        advanceSearchQuery = hasParameter ? JSON.stringify(advanceSearch) : "";
        $('#tblMS_Uso_del_Ejercicio').DataTable().draw();
        return false;
    }

    var advanceSearchQuery = "", isMS_Uso_del_EjercicioTextSearch = true;

    $(document).ready(function () {
        $('.clock').clockpicker();
		$('.date').datepicker({
			todayBtn: "linked",
			keyboardNavigation: false,
			forceParse: false,
			calendarWeeks: true,
			autoclose: true,
			format: "@ConfigurationProperty.DateFormatDatePicker"
		});
        $("#txtAdvanceUso_del_Ejercicio").keypress(function () {
            isMS_Uso_del_EjercicioTextSearch = true;
            $("#ddlAdvanceUso_del_Ejercicio").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceUso_del_Ejercicio").change(function () {
            isMS_Uso_del_EjercicioTextSearch = false;
            $("#txtAdvanceUso_del_Ejercicio").val('');
        });

    });
</script>


