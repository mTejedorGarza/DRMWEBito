<script type="text/javascript">

        function SendSpartan_User_RoleData(callBack) {
				
		 var arr = []; 
		 $("form#CreateSpartan_User_Role").find(':input').each(function( index ) {		 
			if ($(this).prop('disabled')==true|| $(this).prop('disabled')=="disabled")
			{		
				arr.push($(this).attr('id')); 
				$(this).prop('disabled', false);  	
			}
	    });
		
             var formData = new FormData($("form#CreateSpartan_User_Role")[0]);
			$.each( arr, function( key, value ) {
			  $('#' +value).prop('disabled', true);
			});
		
		
            
            var isNew = $('#hdnIsNew').val();
            var formData = new FormData($("form#CreateSpartan_User_Role")[0]);
            if (checkClientValidate('Spartan_User_RoleCreateForm')) {
                $.ajax({
                    url: '@Url.Content("~/Frontal/Spartan_User_Role/Post?IsNew=")' + isNew,
                    type: 'POST',
                    data: formData,
                    async: true,
                    success: function (result) {
                        if (result < 0) {
                            showNotification("@Resources.Resources.ErrorSave", "error");
                        } else {

                            showNotification("@Resources.Resources.SaveSuccess", "success");
                            callBack(result);
                        }
                    },
                    error: function (result) {
                        showNotification("@Resources.Resources.ErrorContactingServer", "error");
                    },
                    cache: false,
                    contentType: false,
                    processData: false
                });
            }
            return false;
        };
        function GetPropertyBag() {
            $.get('@Url.Action("Spartan_User_RolePropertyBag", "Spartan_User_Role")', function (data) {
                $(".PropertyModal").html(data);
            });
        }
        function Spartan_User_RoleGetBusinessRule(FieldId, FieldName, Attribute) {
			if (FieldId != null && FieldName != null)
			{
				$('#hdnSpartan_User_RoleBusinessRuleFieldId').val(FieldId);
				$('#hdnSpartan_User_RoleBusinessRuleFieldName').val(FieldName);
				$('#hdnSpartan_User_RoleBusinessRuleAttribute').val(Attribute);
			}
            $.get('@Url.Action("BusinessRule", "BussinessRule")', { FieldId: $('#hdnSpartan_User_RoleBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_User_RoleBusinessRuleFieldName').val(), ObjectId: '32873', Attribute: $('#hdnSpartan_User_RoleBusinessRuleAttribute').val(), Screen: 'Spartan_User_Role' }, function (data) {
                $(".Spartan_User_RoleBusinessRuleModal").html(data);
            });
        }
        function Spartan_User_RoleGetAddBusinessRule(RuleId, FieldId, FieldName, Attribute) {
			if (FieldId != null && FieldName != null) {
				$('#hdnSpartan_User_RoleBusinessRuleFieldId').val(FieldId);
				$('#hdnSpartan_User_RoleBusinessRuleFieldName').val(FieldName);
				$('#hdnSpartan_User_RoleBusinessRuleAttribute').val(Attribute);
			}
            $.get('@Url.Action("AddBusinessRule", "BussinessRule")', { BusinessRuleId: RuleId, FieldId: $('#hdnSpartan_User_RoleBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_User_RoleBusinessRuleFieldName').val(), ObjectId: '32873', Attribute: $('#hdnSpartan_User_RoleBusinessRuleAttribute').val(), Screen: 'Spartan_User_Role' }, function (data) {
                $(".Spartan_User_RoleAddBusinessRuleModal").html(data);
                $(".datatable").DataTable();
