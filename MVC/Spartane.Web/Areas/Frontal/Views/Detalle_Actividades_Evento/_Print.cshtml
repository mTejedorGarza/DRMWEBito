@model IList<Spartane.Web.Areas.Frontal.Models.Detalle_Actividades_EventoGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Folio
            </td>
                        <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Folio
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Tipo_de_Actividad
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Especialidad
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Nombre_de_la_Actividad
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Descripcion
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Quien_imparte
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Dia
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Hora_inicio
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Hora_fin
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Tiene_receso
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Hora_inicio_receso
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Hora_fin_receso
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Duracion_maxima_por_paciente_mins
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Cupo_limitado
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Cupo_maximo
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Ubicacion
            </td>
            <td class="column1">
                @Resources.Detalle_Actividades_EventoResources.Estatus_de_la_Actividad
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Folio
                    </td>
					                    <td>
                        @item.Folio
                    </td>
                    <td>
                        @item.Tipo_de_ActividadDescripcion
                    </td>
                    <td>
                        @item.EspecialidadEspecialidad
                    </td>
                    <td>
                        @item.Nombre_de_la_Actividad
                    </td>
                    <td>
                        @item.Descripcion
                    </td>
                    <td>
                        @item.Quien_imparteName
                    </td>
                    <td>
                        @item.Dia
                    </td>
                    <td>
                        @item.Hora_inicio
                    </td>
                    <td>
                        @item.Hora_fin
                    </td>
                    <td>
                        @item.Tiene_receso
                    </td>
                    <td>
                        @item.Hora_inicio_receso
                    </td>
                    <td>
                        @item.Hora_fin_receso
                    </td>
                    <td>
                        @item.Duracion_maxima_por_paciente_mins
                    </td>
                    <td>
                        @item.Cupo_limitado
                    </td>
                    <td>
                        @item.Cupo_maximo
                    </td>
                    <td>
                        @item.UbicacionNombre
                    </td>
                    <td>
                        @item.Estatus_de_la_ActividadDescripcion
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

