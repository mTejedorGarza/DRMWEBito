<script type="text/javascript">

        function SendSpartan_Format_ConfigurationData(callBack) {
            var formData = new FormData($("form#CreateSpartan_Format_Configuration")[0]);
            if (checkClientValidate('Spartan_Format_ConfigurationCreateForm')) {
                $.ajax({
                    url: '@Url.Content("~/Frontal/Spartan_Format_Configuration/Post?IsNew="+ViewBag.IsNew+"")',
                    type: 'POST',
                    data: formData,
                    async: true,
                    success: function (result) {
                        if (result < 0) {
                            showNotification("@Resources.Resources.ErrorSave", "error");
                        } else {

                            showNotification("@Resources.Resources.SaveSuccess", "success");
                            callBack(result);
                        }
                    },
                    error: function (result) {
                        showNotification("@Resources.Resources.ErrorContactingServer", "error");
                    },
                    cache: false,
                    contentType: false,
                    processData: false
                });
            }
            return false;
        };
        function GetPropertyBag() {
            $.get('@Url.Action("Spartan_Format_ConfigurationPropertyBag", "Spartan_Format_Configuration")', function (data) {
                $(".PropertyModal").html(data);
            });
        }
        function Spartan_Format_ConfigurationGetBusinessRule(FieldId, FieldName, Attribute) {
			if (FieldId != null && FieldName != null)
			{
				$('#hdnSpartan_Format_ConfigurationBusinessRuleFieldId').val(FieldId);
				$('#hdnSpartan_Format_ConfigurationBusinessRuleFieldName').val(FieldName);
				$('#hdnSpartan_Format_ConfigurationBusinessRuleAttribute').val(Attribute);
			}
            $.get('@Url.Action("BusinessRule", "BussinessRule")', { FieldId: $('#hdnSpartan_Format_ConfigurationBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_Format_ConfigurationBusinessRuleFieldName').val(), ObjectId: $('#hdnObjectId').val(), Attribute: $('#hdnSpartan_Format_ConfigurationBusinessRuleAttribute').val() }, function (data) {
                $(".Spartan_Format_ConfigurationBusinessRuleModal").html(data);
            });
        }
        function GetAddBusinessRule(RuleId, FieldId, FieldName, Attribute) {
			if (FieldId != null && FieldName != null) {
				$('#hdnSpartan_Format_ConfigurationBusinessRuleFieldId').val(FieldId);
				$('#hdnSpartan_Format_ConfigurationBusinessRuleFieldName').val(FieldName);
				$('#hdnSpartan_Format_ConfigurationBusinessRuleAttribute').val(Attribute);
			}
            $.get('@Url.Action("AddBusinessRule", "BussinessRule")', { BusinessRuleId: RuleId, FieldId: $('#hdnSpartan_Format_ConfigurationBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_Format_ConfigurationBusinessRuleFieldName').val(), ObjectId: $('#hdnObjectId').val(), Attribute: $('#hdnSpartan_Format_ConfigurationBusinessRuleAttribute').val(), Screen: 'Spartan_Format_Configuration' }, function (data) {
                $(".Spartan_Format_ConfigurationAddBusinessRuleModal").html(data);
                $(".datatable").DataTable();
            });
        }
		function RemoveBusinessRule(RuleId) {
			$.get('@Url.Action("RemoveBusinessRule", "BussinessRule")', { BusinessRuleId: RuleId, FieldId: $('#hdnSpartan_Format_ConfigurationBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_Format_ConfigurationBusinessRuleFieldName').val(), ObjectId: $('#hdnObjectId').val(), Attribute: $('#hdnSpartan_Format_ConfigurationBusinessRuleAttribute').val(), Screen: 'Spartan_Format_Configuration' }, function (data) {
				$(".Spartan_Format_ConfigurationBusinessRuleModal").html(data);
			});
		}

