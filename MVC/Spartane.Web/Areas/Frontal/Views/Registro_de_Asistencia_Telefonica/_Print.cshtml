@model IList<Spartane.Web.Areas.Frontal.Models.Registro_de_Asistencia_TelefonicaGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Folio
            </td>
                        <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Folio
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Fecha_de_llamada
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Hora_de_llamada
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Usuario_que_llama
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Dispositivo
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Nombre_Paciente
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Suscripcion
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Numero_telefonico_del_Paciente
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Correo_del_Paciente
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Telefono_de_Asistencia_marcado
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Hora_inicio_de_la_Llamada
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Hora_fin_de_la_Llamada
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Duracion_minutos
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Asunto_de_la_Llamada
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Atendio
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Comentarios
            </td>
            <td class="column1">
                @Resources.Registro_de_Asistencia_TelefonicaResources.Estatus
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Folio
                    </td>
					                    <td>
                        @item.Folio
                    </td>
                    <td>
                        @item.Fecha_de_llamada
                    </td>
                    <td>
                        @item.Hora_de_llamada
                    </td>
                    <td>
                        @item.Usuario_que_llamaName
                    </td>
                    <td>
                        @item.Dispositivo
                    </td>
                    <td>
                        @item.Nombre_PacienteNombre_Completo
                    </td>
                    <td>
                        @item.Suscripcion
                    </td>
                    <td>
                        @item.Numero_telefonico_del_Paciente
                    </td>
                    <td>
                        @item.Correo_del_Paciente
                    </td>
                    <td>
                        @item.Telefono_de_Asistencia_marcado
                    </td>
                    <td>
                        @item.Hora_inicio_de_la_Llamada
                    </td>
                    <td>
                        @item.Hora_fin_de_la_Llamada
                    </td>
                    <td>
                        @item.Duracion_minutos
                    </td>
                    <td>
                        @item.Asunto_de_la_LlamadaDescripcion
                    </td>
                    <td>
                        @item.AtendioName
                    </td>
                    <td>
                        @item.Comentarios
                    </td>
                    <td>
                        @item.EstatusDescripcion
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

