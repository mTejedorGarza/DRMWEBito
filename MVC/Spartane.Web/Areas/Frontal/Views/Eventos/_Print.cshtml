<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.EventosResources.Folio
            </td>
                        <td class="column1">
                @Resources.EventosResources.Folio
            </td>
            <td class="column1">
                @Resources.EventosResources.Fecha_de_Registro
            </td>
            <td class="column1">
                @Resources.EventosResources.Hora_de_Registro
            </td>
            <td class="column1">
                @Resources.EventosResources.Usuario_que_Registra
            </td>
            <td class="column1">
                @Resources.EventosResources.Empresa
            </td>
            <td class="column1">
                @Resources.EventosResources.Nombre_del_Evento
            </td>
            <td class="column1">
                @Resources.EventosResources.Descripcion
            </td>
            <td class="column1">
                @Resources.EventosResources.Fecha_inicio_del_Evento
            </td>
            <td class="column1">
                @Resources.EventosResources.Fecha_fin_del_Evento
            </td>
            <td class="column1">
                @Resources.EventosResources.Cantidad_de_dias
            </td>
            <td class="column1">
                @Resources.EventosResources.Evento_en_Empresa
            </td>
            <td class="column1">
                @Resources.EventosResources.Nombre_del_Lugar
            </td>
            <td class="column1">
                @Resources.EventosResources.Calle
            </td>
            <td class="column1">
                @Resources.EventosResources.Numero_exterior
            </td>
            <td class="column1">
                @Resources.EventosResources.Numero_interior
            </td>
            <td class="column1">
                @Resources.EventosResources.Colonia
            </td>
            <td class="column1">
                @Resources.EventosResources.CP
            </td>
            <td class="column1">
                @Resources.EventosResources.Ciudad
            </td>
            <td class="column1">
                @Resources.EventosResources.Estado
            </td>
            <td class="column1">
                @Resources.EventosResources.Pais
            </td>
            <td class="column1">
                @Resources.EventosResources.Permite_Familiares
            </td>
            <td class="column1">
                @Resources.EventosResources.Estatus
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Folio
                    </td>
					                    <td>
                        @item.Folio
                    </td>
                    <td>
                        @item.Fecha_de_Registro
                    </td>
                    <td>
                        @item.Hora_de_Registro
                    </td>
                    <td>
                        @item.Usuario_que_RegistraName
                    </td>
                    <td>
                        @item.EmpresaNombre_de_la_Empresa
                    </td>
                    <td>
                        @item.Nombre_del_Evento
                    </td>
                    <td>
                        @item.Descripcion
                    </td>
                    <td>
                        @item.Fecha_inicio_del_Evento
                    </td>
                    <td>
                        @item.Fecha_fin_del_Evento
                    </td>
                    <td>
                        @item.Cantidad_de_dias
                    </td>
                    <td>
                        @item.Evento_en_EmpresaDescripcion
                    </td>
                    <td>
                        @item.Nombre_del_Lugar
                    </td>
                    <td>
                        @item.Calle
                    </td>
                    <td>
                        @item.Numero_exterior
                    </td>
                    <td>
                        @item.Numero_interior
                    </td>
                    <td>
                        @item.Colonia
                    </td>
                    <td>
                        @item.CP
                    </td>
                    <td>
                        @item.Ciudad
                    </td>
                    <td>
                        @item.EstadoNombre_del_Estado
                    </td>
                    <td>
                        @item.PaisNombre_del_Pais
                    </td>
                    <td>
                        @item.Permite_FamiliaresDescripcion
                    </td>
                    <td>
                        @item.EstatusDescripcion
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

