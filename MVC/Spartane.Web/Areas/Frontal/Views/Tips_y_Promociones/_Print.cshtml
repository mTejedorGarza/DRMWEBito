@model IList<Spartane.Web.Areas.Frontal.Models.Tips_y_PromocionesGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Folio
            </td>
                        <td class="column1">
                @Resources.Tips_y_PromocionesResources.Folio
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Fecha_de_registro
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Hora_de_Registro
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Usuario_que_Registra
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Tipo_de_Vendedor
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Vendedor
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Nombre
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Descripcion_Corta
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Descripcion_Larga
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Imagen
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Fecha_inicio_de_Vigencia
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Fecha_fin_de_Vigencia
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Especialidad
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Especialista
            </td>
            <td class="column1">
                @Resources.Tips_y_PromocionesResources.Estatus
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Folio
                    </td>
					                    <td>
                        @item.Folio
                    </td>
                    <td>
                        @item.Fecha_de_registro
                    </td>
                    <td>
                        @item.Hora_de_Registro
                    </td>
                    <td>
                        @item.Usuario_que_RegistraName
                    </td>
                    <td>
                        @item.Tipo_de_VendedorDescripcion
                    </td>
                    <td>
                        @item.VendedorName
                    </td>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.Descripcion_Corta
                    </td>
                    <td>
                        @item.Descripcion_Larga
                    </td>
                    <td>
                        @item.Imagen
                    </td>
                    <td>
                        @item.Fecha_inicio_de_Vigencia
                    </td>
                    <td>
                        @item.Fecha_fin_de_Vigencia
                    </td>
                    <td>
                        @item.EspecialidadEspecialidad
                    </td>
                    <td>
                        @item.EspecialistaNombre_Completo
                    </td>
                    <td>
                        @item.EstatusDescripcion
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

