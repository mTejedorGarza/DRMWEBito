@model IList<Spartane.Web.Areas.Frontal.Models.Solicitud_de_Cita_con_EspecialistaGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Folio
            </td>
                        <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Folio
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Fecha_de_solicitud
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Hora_de_solicitud
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Usuario_que_solicita
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Nombre_Completo
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Correo_del_Paciente
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Celular_del_Paciente
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Especialista
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Correo_del_Especialista
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Correo_enviado
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Fecha_de_Retroalimentacion
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Hora_de_Retroalimentacion
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Asististe_a_tu_cita
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Calificacion_Especialista
            </td>
            <td class="column1">
                @Resources.Solicitud_de_Cita_con_EspecialistaResources.Motivo_no_concreto_cita
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Folio
                    </td>
					                    <td>
                        @item.Folio
                    </td>
                    <td>
                        @item.Fecha_de_solicitud
                    </td>
                    <td>
                        @item.Hora_de_solicitud
                    </td>
                    <td>
                        @item.Usuario_que_solicitaName
                    </td>
                    <td>
                        @item.Nombre_Completo
                    </td>
                    <td>
                        @item.Correo_del_Paciente
                    </td>
                    <td>
                        @item.Celular_del_Paciente
                    </td>
                    <td>
                        @item.EspecialistaNombre_Completo
                    </td>
                    <td>
                        @item.Correo_del_Especialista
                    </td>
                    <td>
                        @item.Correo_enviado
                    </td>
                    <td>
                        @item.Fecha_de_Retroalimentacion
                    </td>
                    <td>
                        @item.Hora_de_Retroalimentacion
                    </td>
                    <td>
                        @item.Asististe_a_tu_citaDescripcion
                    </td>
                    <td>
                        @item.Calificacion_EspecialistaDescripcion
                    </td>
                    <td>
                        @item.Motivo_no_concreto_citaDescripcion
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

