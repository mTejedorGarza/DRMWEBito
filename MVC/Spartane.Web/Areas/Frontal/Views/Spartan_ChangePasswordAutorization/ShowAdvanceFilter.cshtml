            advanceSearch.Spartan_ChangePasswordAutorizationHora_de_Registro = $("#txtAdvanceHora_de_Registro").val();
            advanceSearch.Spartan_ChangePasswordAutorizationHora_de_RegistroSearchType = $("#ddlAdvanceHora_de_RegistroFilter").val();
        }
        advanceSearch.UsuarioSearchType = 0;
        if ($('#ddlAdvanceUsuario').val().length > 0 || $("#txtAdvanceUsuario").val() == "") {


