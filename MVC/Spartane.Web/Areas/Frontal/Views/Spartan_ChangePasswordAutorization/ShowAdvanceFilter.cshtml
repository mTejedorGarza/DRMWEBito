            advanceSearch.Spartan_ChangePasswordAutorizationEmailSearchType = $("#ddlAdvanceEmailFilter").val();
        }

        advanceSearchQuery = hasParameter ? JSON.stringify(advanceSearch) : "";
        $('#tblSpartan_ChangePasswordAutorization').DataTable().draw();
        return false;
    }

    var advanceSearchQuery = "", isSpartan_ChangePasswordAutorizationTextSearch = true;

    $(document).ready(function () {
