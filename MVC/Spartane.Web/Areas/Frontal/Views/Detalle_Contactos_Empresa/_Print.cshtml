@model IList<Spartane.Web.Areas.Frontal.Models.Detalle_Contactos_EmpresaGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Folio
            </td>
                        <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Folio
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Nombre_completo
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Correo
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Telefono
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Contacto_Principal
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Area
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Acceso_al_Sistema
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Nombre_de_usuario
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Recibe_Alertas
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Estatus
            </td>
            <td class="column1">
                @Resources.Detalle_Contactos_EmpresaResources.Folio_Usuario
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Folio
                    </td>
					                    <td>
                        @item.Folio
                    </td>
                    <td>
                        @item.Nombre_completo
                    </td>
                    <td>
                        @item.Correo
                    </td>
                    <td>
                        @item.Telefono
                    </td>
                    <td>
                        @item.Contacto_Principal
                    </td>
                    <td>
                        @item.AreaNombre
                    </td>
                    <td>
                        @item.Acceso_al_Sistema
                    </td>
                    <td>
                        @item.Nombre_de_usuario
                    </td>
                    <td>
                        @item.Recibe_Alertas
                    </td>
                    <td>
                        @item.EstatusDescripcion
                    </td>
                    <td>
                        @item.Folio_UsuarioName
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

