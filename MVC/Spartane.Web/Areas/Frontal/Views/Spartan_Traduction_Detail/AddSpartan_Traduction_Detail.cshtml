    <script type="text/javascript">
        



        $(document).ready(function () {
			var currentIndex = @ViewBag.currentRowIndex

            var Spartan_Traduction_DetailRowElement = "Spartan_Traduction_DetailPop_" + currentIndex.toString();
            var abc = "if(dynamicFieldValidation('" + Spartan_Traduction_DetailRowElement + "')){ Spartan_Traduction_DetailInsertRowFromPopup(" + currentIndex + "); }";
