            $('.gridTimePicker').clockpicker();

        }

        function GetPropertyBag() {
            $.get('@Url.Action("Spartan_Traduction_DetailPropertyBag", "Spartan_Traduction_Detail")', function (data) {
                $(".PropertyModal").html(data);
            });
        }
        function Spartan_Traduction_DetailGetBusinessRule(FieldId, FieldName, Attribute) {
			if (FieldId != null && FieldName != null)
			{
				$('#hdnSpartan_Traduction_DetailBusinessRuleFieldId').val(FieldId);
				$('#hdnSpartan_Traduction_DetailBusinessRuleFieldName').val(FieldName);
				$('#hdnSpartan_Traduction_DetailBusinessRuleAttribute').val(Attribute);
			}
            $.get('@Url.Action("BusinessRule", "BussinessRule")', { FieldId: $('#hdnSpartan_Traduction_DetailBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_Traduction_DetailBusinessRuleFieldName').val(), ObjectId: '32363', Attribute: $('#hdnSpartan_Traduction_DetailBusinessRuleAttribute').val(), Screen: 'Spartan_Traduction_Detail' }, function (data) {
                $(".Spartan_Traduction_DetailBusinessRuleModal").html(data);
            });
        }
        function Spartan_Traduction_DetailGetAddBusinessRule(RuleId, FieldId, FieldName, Attribute) {
			if (FieldId != null && FieldName != null) {
				$('#hdnSpartan_Traduction_DetailBusinessRuleFieldId').val(FieldId);
				$('#hdnSpartan_Traduction_DetailBusinessRuleFieldName').val(FieldName);
				$('#hdnSpartan_Traduction_DetailBusinessRuleAttribute').val(Attribute);
			}
            $.get('@Url.Action("AddBusinessRule", "BussinessRule")', { BusinessRuleId: RuleId, FieldId: $('#hdnSpartan_Traduction_DetailBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_Traduction_DetailBusinessRuleFieldName').val(), ObjectId: '32363', Attribute: $('#hdnSpartan_Traduction_DetailBusinessRuleAttribute').val(), Screen: 'Spartan_Traduction_Detail' }, function (data) {
                $(".Spartan_Traduction_DetailAddBusinessRuleModal").html(data);
                $(".datatable").DataTable();
            });
        }
		function RemoveBusinessRule(RuleId) {
			$.get('@Url.Action("RemoveBusinessRule", "BussinessRule")', { BusinessRuleId: RuleId, FieldId: $('#hdnSpartan_Traduction_DetailBusinessRuleFieldId').val(), FieldName: $('#hdnSpartan_Traduction_DetailBusinessRuleFieldName').val(), ObjectId: '32363', Attribute: $('#hdnSpartan_Traduction_DetailBusinessRuleAttribute').val(), Screen: 'Spartan_Traduction_Detail' }, function (data) {
