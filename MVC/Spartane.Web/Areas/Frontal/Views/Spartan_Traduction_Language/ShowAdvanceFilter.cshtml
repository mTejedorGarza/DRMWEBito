                </div>
                <div class="MarginBottom form-inline">
                    <label class="">@Resources.Resources.From:</label>
                    @Html.TextBoxFor(m => m.FromIdLanguage, new { @class = "form-control greaterThanZero", @type = "text", @id = "txtAdvanceFromIdLanguage" })
                    @Html.ValidationMessageFor(m => m.FromIdLanguage)
                    <label class="">@Resources.Resources.To: </label>
                    @Html.TextBoxFor(m => m.ToIdLanguage, new { @class = "form-control greaterThan greaterThanZero", @type = "text", @id = "txtAdvanceToIdLanguage", @data_min = "txtAdvanceFromIdLanguage" })
                    @Html.ValidationMessageFor(m => m.ToIdLanguage)
                </div>
                <div class="MarginBottom">
                    <h3>@Resources.Spartan_Traduction_LanguageResources.LanguageT</h3>
                </div>
                <div class="MarginBottom form-inline">
                    <label class="">@Resources.Resources.Filter:</label>
                    @Html.DropDownListFor(m => m.LanguageTFilter, filters, new { @class = "form-control", @id = "ddlLanguageTFilter" })
                    @Html.TextBoxFor(m => m.LanguageT, new { @class = "form-control", @type = "text", @id = "txtLanguageT" })
                </div>

                <div class="MarginBottom form-inline">
                    <input type="submit" class="btn btn-primary" value="@Resources.Resources.Search"><a class="btn btn-primary" href="@Url.Content("~/Frontal/Spartan_Traduction_Language/")" value=" ">@Resources.Resources.Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

