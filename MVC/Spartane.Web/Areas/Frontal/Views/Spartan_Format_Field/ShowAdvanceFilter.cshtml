<script>
    function InitiateAdvanceSearch() {
        var advanceSearch = {}, hasParameter = false;
        if ($("#txtAdvanceFromFormatFieldId").val() != "" || $("#txtAdvanceToFormatFieldId").val() != "") {
            hasParameter = true;
            advanceSearch.Spartan_Format_FieldFormatFieldIdFrom = $("#txtAdvanceFromFormatFieldId").val();
            advanceSearch.Spartan_Format_FieldFormatFieldIdTo = $("#txtAdvanceToFormatFieldId").val();
        }
        advanceSearch.FormatSearchType = 0;
        if ($('#ddlAdvanceFormat').val().length > 0 || $("#txtAdvanceFormat").val() == "") {


