            advanceSearch.Spartan_Format_FieldCreation_DateFrom = $("#txtAdvanceFromCreation_Date").val();
            advanceSearch.Spartan_Format_FieldCreation_DateTo = $("#txtAdvanceToCreation_Date").val();
