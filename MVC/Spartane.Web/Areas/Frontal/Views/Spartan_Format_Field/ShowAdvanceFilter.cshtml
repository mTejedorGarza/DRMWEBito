            advanceSearch.Spartan_Format_FieldCreation_UserFrom = $("#txtAdvanceFromCreation_User").val();
            advanceSearch.Spartan_Format_FieldCreation_UserTo = $("#txtAdvanceToCreation_User").val();
        }
        if ($("#txtAdvanceProperties").val() != "") {
            hasParameter = true;
            advanceSearch.Spartan_Format_FieldProperties = $("#txtAdvanceProperties").val();
            advanceSearch.Spartan_Format_FieldPropertiesSearchType = $("#ddlAdvancePropertiesFilter").val();
        }

        advanceSearchQuery = hasParameter ? JSON.stringify(advanceSearch) : "";
        $('#tblSpartan_Format_Field').DataTable().draw();
        return false;
    }

    var advanceSearchQuery = "", isSpartan_Format_FieldTextSearch = true;

    $(document).ready(function () {
        $('.clockpicker').clockpicker();
        $("#txtAdvanceFormat").keypress(function () {
            isSpartan_Format_FieldTextSearch = true;
            $("#ddlAdvanceFormat").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceFormat").change(function () {
            isSpartan_Format_FieldTextSearch = false;
            $("#txtAdvanceFormat").val('');
        });

    });
</script>


