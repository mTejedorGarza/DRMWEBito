            hasParameter = true;
            advanceSearch.Spartan_Format_FieldPhysical_Field_Name = $("#txtAdvancePhysical_Field_Name").val();
            advanceSearch.Spartan_Format_FieldPhysical_Field_NameSearchType = $("#ddlAdvancePhysical_Field_NameFilter").val();
        }
        if ($("#txtAdvanceLogical_Field_Name").val() != "") {
            hasParameter = true;
            advanceSearch.Spartan_Format_FieldLogical_Field_Name = $("#txtAdvanceLogical_Field_Name").val();
            advanceSearch.Spartan_Format_FieldLogical_Field_NameSearchType = $("#ddlAdvanceLogical_Field_NameFilter").val();
