@model IList<Spartane.Web.Areas.Frontal.Models.Template_Dashboard_EditorGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Template_Dashboard_EditorResources.Template_Id
            </td>
                        <td class="column1">
                @Resources.Template_Dashboard_EditorResources.Description
            </td>
            <td class="column1">
                @Resources.Template_Dashboard_EditorResources.Template_Image_Thumbnail
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Template_Id
                    </td>
					                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Template_Image_Thumbnail
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>

