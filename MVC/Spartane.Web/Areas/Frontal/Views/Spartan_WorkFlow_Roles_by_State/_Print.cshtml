@model IList<Spartane.Web.Areas.Frontal.Models.Spartan_WorkFlow_Roles_by_StateGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Roles_by_StateId
            </td>
                        <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Phase
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.State
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.User_Role
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Phase_Transition
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_To_Consult
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_To_New
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_To_Modify
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_to_Delete
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_To_Export
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_To_Print
            </td>
            <td class="column1">
                @Resources.Spartan_WorkFlow_Roles_by_StateResources.Permission_Settings
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Roles_by_StateId
                    </td>
					                    <td>
                        @item.PhaseName
                    </td>
                    <td>
                        @item.StateName
                    </td>
                    <td>
                        @item.User_Role
                    </td>
                    <td>
                        @item.Phase_Transition
                    </td>
                    <td>
                        @item.Permission_To_Consult
                    </td>
                    <td>
                        @item.Permission_To_New
                    </td>
                    <td>
                        @item.Permission_To_Modify
                    </td>
                    <td>
                        @item.Permission_to_Delete
                    </td>
                    <td>
                        @item.Permission_To_Export
                    </td>
                    <td>
                        @item.Permission_To_Print
                    </td>
                    <td>
                        @item.Permission_Settings
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>

